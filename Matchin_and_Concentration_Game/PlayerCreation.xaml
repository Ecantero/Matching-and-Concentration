<Window x:Class="MatchingGame.PlayerCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchingGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Please enter your name Player 1" ></Label>
            <TextBox  x:Name="Name"
                  Background="#eee"  TextAlignment="Center"  AcceptsReturn="True" Padding="5"/>
            <Button x:Name="SubmitNameOfPlayers" Click="SubmitNameOfPlayers_Click" >Submit</Button>
        </StackPanel>
    </Grid>
</Window>
