<Window x:Class="MatchingGame.HowManyPlayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchingGame"
        mc:Ignorable="d"
        Title="HowManyPlayers" Height="450" Width="450">
    <Grid Background="BlanchedAlmond">
        <StackPanel>
            <Label Content="How many Players will be playing?" FontWeight="Bold"></Label>
            <TextBox x:Name="numberOfPlayers" Background="#eee" Padding="2" />
            <Button x:Name="SubmitNumberOfPlayers" Click="SubmitNumberOfPlayers_Click">Submit</Button>
        </StackPanel>
    </Grid>
</Window>
