<Window x:Class="MatchingGame.Concentration_Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchingGame"
        mc:Ignorable="d"
        Title="Concentration_Game" Height="600" Width="1000">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="MainMenu"
                Content="Back to Main Menu"
                Width="110"
                Height="50"
                Grid.Column="1"
                Grid.Row="1"
                Margin="10,0,0,0"
                Click="MainMenu_Click"/>
        <Button x:Name="Easy"
                Content="Easy Mode"
                Width="100"
                Height="50"
                Grid.Column="0"
                Grid.Row="1"
                Margin="0, 0, 0, 300"
                Click="Easy_Click"/>
        <Button x:Name="Medium"
                Content="Medium Mode"
                Width="100"
                Height="50"
                Grid.Column="0"
                Grid.Row="1"
                Click="Medium_Click"/>
        <Button x:Name="Hard"
                Content="Hard Mode"
                Width="100"
                Height="50"
                Grid.Column="0"
                Grid.Row="1"
                Margin="0, 300, 0, 0"
                Click="Hard_Click"/>
        <Button x:Name="NewGame"
                Content="New Game"
                Width="100"
                Height="50"
                Grid.Column="1"
                Grid.Row="1"
                Margin="0, 0, 0, 300"
                Click="NewGame_Click"
                Visibility="Collapsed"/>

        <Grid x:Name="LeaderBoardGrid" Visibility="Collapsed"  Grid.Column="0" Grid.RowSpan="2">
