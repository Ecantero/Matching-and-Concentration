            <TextBlock x:Name="Gameover" Grid.Row="0" Grid.ColumnSpan="4" Visibility="Collapsed"/>
            <Button x:Name="TestButton" Content="Test" Height="20" Width="20" Grid.Row="0" Click="TimerControl"/>

