                   Grid.Row="1"/>
            <Image Source="Concentration\shapeAsset 2.png"
                   Grid.Row="1"
                   Grid.Column="1"/>
            <Image Source="Concentration\shapeAsset 3.png"
                   Grid.Row="1"
                   Grid.Column="2"/>
