<Window x:Class="MatchingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchingGame"
        mc:Ignorable="d"
        Title="Matching_Game" Height="400" Width="400">

    <Grid>
        <Rectangle Fill="Beige"/>
        <Button x:Name="Easy"
                  Click="Easy_Click"
                  Content="Easy"
                  Height="69"
                  FontSize="50"
                  VerticalAlignment="Top" 
                  Margin="110,36,109.6,0"/>
        <Button x:Name="Medium"
                  Click="Medium_Click"
                  Content="Medium"
                  Height="79"
                  FontSize="50"
                  HorizontalAlignment="Center"
                  Margin="96,139,93.6,0"
                  VerticalAlignment="Top" 
                  Width="204"/>
        <Button x:Name="Hard"
                  Click="Hard_Click"
                  Content="Hard"
                  Height="66"
                  FontSize="50"
                  VerticalAlignment="Top" 
                  Margin="110,251,121.6,0"/>
    </Grid>
</Window>
